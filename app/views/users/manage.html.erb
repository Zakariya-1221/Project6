<h1>Manage Users</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.roleName %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user.id) %> |
          <%= link_to 'Delete', delete_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Create New User</h2>
<%= form_with(url: admin_create_user_path, method: :post) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>

  <%= form.label :email %>
  <%= form.email_field :email %><br>

  <%= form.label :password %>
  <%= form.password_field :password %><br>

  <%= form.label :role_id %>
  <%= form.select :role_id, Role.all.pluck(:roleName, :id) %><br>

  <%= form.submit 'Create User' %>
<% end %>
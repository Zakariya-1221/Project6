<h1>Login</h1>

<% if flash[:error] %>
  <div class="error">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_with(url: login_path, local: true) do |f| %>
  <div class="group">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, class: 'input' %>
  </div>

  <div class="group">
    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password, class: 'input' %>
  </div>

  <div class="group">
    <%= f.submit "Log in", class:'button' %>
  </div>
<% end %>

<p class="signup">Don't have an account? <%= link_to "Sign up", new_user_path %></p>
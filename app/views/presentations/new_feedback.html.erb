<h1>Leave Feedback</h1>

<%= form_with(model: @feedback, url: feedbacks_path, local: true) do |form| %>
  <div>
    <%= form.label :presentation_id, "Select Presenter" %>
    <%= form.collection_select :presentation_id, @presentations, :id, :title, prompt: "Select a presentation" %>
  </div>

  <div>
    <%= form.label :score %>
    <%= form.number_field :score, min: 1, max: 5 %> <!-- Example score range from 1 to 5 -->
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <%= form.submit "Submit Feedback" %>
<% end %>